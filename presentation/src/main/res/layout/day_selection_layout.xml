<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/previousWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/arrow_background"
        android:padding="8dp"
        android:src="@drawable/arrow_back_ic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timeInterval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/gardens_cm_regular"
        android:text="@string/time_interval_example_string"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/nextWeek"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toEndOf="@+id/previousWeek"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/listDayLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/previousWeek"
        app:layout_constraintEnd_toStartOf="@+id/nextWeek"
        app:layout_constraintStart_toEndOf="@+id/previousWeek"
        app:layout_constraintTop_toTopOf="@+id/previousWeek">

        <TextView
            android:id="@+id/day1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/day_number_background"
            android:fontFamily="@font/gardens_cm_regular"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/numb_test_string"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold"
            tools:background="@drawable/day_number_active_background" />

        <TextView
            android:id="@+id/day2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/day_number_background"
            android:fontFamily="@font/gardens_cm_regular"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/numb_test_string"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/day3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/day_number_background"
            android:fontFamily="@font/gardens_cm_regular"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/numb_test_string"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/day4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/day_number_background"
            android:fontFamily="@font/gardens_cm_regular"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/numb_test_string"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/day5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/day_number_background"
            android:fontFamily="@font/gardens_cm_regular"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/numb_test_string"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/day6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/day_number_background"
            android:fontFamily="@font/gardens_cm_regular"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/numb_test_string"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/day7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/day_number_background"
            android:fontFamily="@font/gardens_cm_regular"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/numb_test_string"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/nextWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/arrow_background"
        android:padding="8dp"
        android:src="@drawable/arrow_next_ic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>